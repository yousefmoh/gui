            android:layout_width="0dp"
            android:text="السيد جمال نايف براهمة"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="رئيس مجلس الادارة و الرئيس التنفيذي"
